<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ubi.trackingwebapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLogin">
        <activity android:name=".ChatActivity"></activity>
        <activity android:name=".eventInfoActivity" />
        <activity android:name=".eventParticipate" />
        <activity android:name=".EventsListActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".CreateEvent" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppRegister" />
    </application>

</manifest>